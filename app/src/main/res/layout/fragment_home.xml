<com.github.androidprogresslayout.ProgressLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:progressLayout="http://schemas.android.com/apk/res-auto"
    android:id="@+id/progress_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    progressLayout:progress="false"
    progressLayout:progressBackground="#DDDDDD">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:fab="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#DDDDDD"
            android:scrollbars="none">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">


                <View
                    android:id="@+id/header"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />

                <View
                    android:id="@+id/body"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/header" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/topview" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="80dp"
                    android:focusableInTouchMode="true"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:text="Premium Offer"
                        android:textAllCaps="true"
                        android:textColor="@color/accentColor"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-14dp"
                        android:fontFamily="sans-serif-black"
                        android:text="Wanted:"
                        android:textAllCaps="true"
                        android:textColor="@color/textWhite"
                        android:textSize="40sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-18dp"
                        android:fontFamily="sans-serif-light"
                        android:text="Developer"
                        android:textAllCaps="true"
                        android:textColor="@color/textWhite"
                        android:textSize="40sp" />

                </LinearLayout>


                <de.pajowu.donate.ExpandableGridView
                    android:id="@+id/gridView1"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_below="@+id/header"
                    android:columnWidth="100dp"
                    android:gravity="center"
                    android:horizontalSpacing="6dp"
                    android:numColumns="2"
                    android:padding="6dp"
                    android:stretchMode="columnWidth"
                    android:verticalSpacing="3dp" />

                <com.melnykov.fab.FloatingActionButton
                    android:id="@+id/fab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/header"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="-28dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/ic_add_white"
                    fab:fab_colorNormal="@color/accentColor" />
            </RelativeLayout>

        </ScrollView>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@drawable/actionbar_shadow" />
    </RelativeLayout>
</com.github.androidprogresslayout.ProgressLayout>